    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-menu">
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <a class="navbar-brand ps-3" href="/"> Seguimiento Docente </a>
            
            <!-- Navbar-->
            <ul class="d-md-inline-block navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#!">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark bg-menu" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading text-bg-menu">Docente</div>
                            <a class="nav-link collapsed text-bg-menu" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAsistencia" aria-expanded="false" aria-controls="collapseAsistencia">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Registrar asistencia
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseAsistencia" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link text-bg-menu" href="/formulario-aulas">Registrar asistencia</a>
                                    <a class="nav-link text-bg-menu" href="/formulario-aulas-qr">QR</a>
                                </nav>
                            </div>
                            <a class="nav-link collapsed text-bg-menu" href="#" data-bs-toggle="collapse" data-bs-target="#collapseGestionDocente" aria-expanded="false" aria-controls="collapseGestionDocente">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Gestión
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseGestionDocente" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link text-bg-menu" href="/cambio-clase">Intercambiar Clase</a>
                                    <a class="nav-link text-bg-menu" href="/anular-clase">Cancelar Clase</a>
                                    <a class="nav-link text-bg-menu" href="/registro-motivo-falta">Registrar motivo de falta</a>
                                </nav>
                            </div>
                            <% if (usuario.rol == 'Decanato') { %>
                                <div class="sb-sidenav-menu-heading text-bg-menu">Decanato</div>
                                <a class="nav-link text-bg-menu" href="/profesores-infracciones"></a>
                                    <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                    Lista de 'delincuentes'
                                </a>
                            <% } %>
                            <% if (usuario.rol == 'Admin') { %>
                                <div class="sb-sidenav-menu-heading text-bg-menu">Administrador</div>
                                <a class="nav-link text-bg-menu" href="/registrar-firmas">
                                    <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                    Registrar firmas
                                </a>
                                <a class="nav-link text-bg-menu" href="/verificar-docencias">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    Ver docencias
                                </a>
                                <a class="nav-link text-bg-menu" href="/enviar-avisos">
                                    <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                    Enviar avisos
                                </a>
                            <% } %>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer bg-menu">
                        <div class="small">Logged in as:</div>
                        <%= usuario.nombre %> <%= usuario.apellidos %>
                    </div>
                </nav>
            </div>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid below-navbar px-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Docencias del día
                        </div>
                        <div class="card-body">
                            <table id="datatable">
                                <div class="py-2">
                                    <label class="ms-2 me-1" for="date-filter">Fecha</label>
                                    <input class="datatable-selector" type="date" id="date-filter" name="date-filter" value="dd/mm/aaaa" min="2023-09-11" max="2030-07-31" />
                                    <label class="ms-2 me-1" for="espacio-filter">Espacio</label>
                                    <select class="datatable-selector dt-status-filter" id="espacio-filter">
                                        <% espacios.forEach(function(espacio) { %>
                                            <option value="<%= espacio %>"><%= espacio %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Clase</th>
                                        <th>Docente</th>
                                        <th>Sustituto</th>
                                        <th>Confirmar</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Clase</th>
                                        <th>Docente</th>
                                        <th>Sustituto</th>
                                        <th>Confirmar</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% clases.forEach(function(clase) { %>
                                        <tr>
                                            <td>clase.hora</td>
                                            <td>clase.clase</td>
                                            <td>clase.docente</td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" value="" id="checkSustituto">
                                                <select class="select form-control" id="sustituto-filter">
                                                    <% docentes.forEach(function(docente) { %>
                                                        <option value="<%= docente.nombre %>"><%= docente.nombre %></option>
                                                    <% }); %>
                                                </select>                                            
                                            </td>
                                            <td>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="registrar">
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>                        
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                                &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="../assets/js/scripts.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>
        <script src="../assets/js/datatables-demo.min.js"></script>
        <script> 
            $(document).ready(function() {
                // Initialize Select2
                var select2 = $('.select2').select2();
            });
        </script>
    </body>
</html>